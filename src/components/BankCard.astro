---
interface Props {
  name?: string;
  image: string;
  link?: string;
}
const { name = "Bank Name", image, link = "#" } = Astro.props as Props;
---

<a
  href={link}
  class="flex flex-col items-center text-center border-brutal-lg p-2 lg:p-4 transition-all duration-500 bg-white relative bottom-0 lg:hover:bottom-1 lg:hover:scale-105"
>
  <div class="w-full rounded-lg grid place-items-center p-2 lg:p-4 bg-white">
    <img src={image} alt={name} class="h-[50px] object-contain" />
  </div>
  <h3 class="text-base lg:text-xl mt-4">{name}</h3>
</a>
